<h1>Eat the Burger!</h1>

<h2>Burgers to Eat</h2>


<div class="col-md-4">
  <div class="col-md-12 text-center">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
              <div class="burger_name" style="font-size: 14pt; padding: 10px">{{this.burger_name}}
                <button type="submit" class='burgerAvailable'>DEVOUR!</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
  </div>
</div>

<h2>Burgers Devoured</h2>

<div class="col-md-4">
  <div class="col-md-12 text-center">
    {{#each burgers}}
      {{#if this.devoured}}
          <!--<form class="col-md-12" action="/burger/delete/{{this.id}}?method=PUT" method="POST">-->
         <div class="burger_name" style="font-size: 14pt; padding: 10px">{{this.burger_name}}</div>
      {{/if}}
    {{/each}}
  </div>
</div>


<h2>Add A Burger</h2>

<div class="row">
  <div class="col s12">
    <form action="/burger" method="POST">
      <input type="text" id="name" name="burger_name">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>